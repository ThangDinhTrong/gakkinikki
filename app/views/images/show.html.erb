<div class="col-sm-6 col-sm-offset-3">
  <div class="panel panel-primary">
    <div class="panel-body">
      <p id="notice"><%= notice %></p>

      <p class="hidden">
        <strong>User:</strong>
        <%= @image.user_id %>
      </p>

      <p>
        <strong>Title:</strong>
        <%= @image.title %>
      </p>

      <p>
      <div class="row">
        <div class="col-md-6">
          <strong>File:</strong>
          <%= image_tag @image.file, class: "img-big" %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-8">
          <%= link_to 'Edit', edit_image_path(@image), class: "btn btn-primary" %>
          <%= link_to 'Back', images_path, class: "btn btn-primary" %>
        </div>
      </div>
      </p>
    </div>
  </div>
</div>

